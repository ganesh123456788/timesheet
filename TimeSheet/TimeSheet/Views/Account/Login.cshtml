@model TimeSheet.Models.User

@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Timesheet</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="timesheet.css">
</head>
<style>
    body {
        font-family: Arial, sans-serif;
        background: linear-gradient(rgb(241, 210, 195), rgb(171, 196, 204));
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .login-container {
        background: linear-gradient(rgb(241, 210, 195), rgb(171, 196, 204));
        padding: 2rem;
        border-radius: 20px;
        width: 500px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    h2 {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .input-group {
        margin-bottom: 1rem;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    label {
        margin-bottom: 0.5rem;
    }

    input {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    button {
        width: 70%;
        padding: 0.5rem;
        background-color: #5cb85c;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 1rem;
    }

        button:hover {
            background-color: #4cae4c;
        }

    .error-message {
        color: red;
        text-align: center;
        margin-top: 1rem;
    }

    .role-selector {
        display: flex;
        justify-content: space-between;
        margin-top: 1rem;
    }
</style>
<body>
    <div class="container">
        <h2 class="title">Elaboration Beta IT Soft Solutions Pvt Ltd</h2>
        <h2>Login</h2>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <div>
                @Html.LabelFor(m => m.EmployeeId)
                @Html.TextBoxFor(m => m.EmployeeId)
                @Html.ValidationMessageFor(m => m.EmployeeId)
            </div>

            <div>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <button type="submit">Login</button>
        }

    </div>
</body>
</html>