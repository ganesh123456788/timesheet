
@model List<TimeSheet.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Timesheet</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="timesheet.css"> <!-- Reuse the existing CSS -->
    <style>
        /* Additional styles for the admin page */
        .admin-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(219, 141, 141, 0.1);
            background-color: white;
        }

        h2 {
            margin-bottom: 1.5rem;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 0.75rem;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        thead {
            background-color: #3CE409;
        }

        th {
            color: white;
            font-weight: bold;
        }

        tbody tr:nth-child(even) {
            background-color: #F9F9F9;
        }

        tbody tr:hover {
            background-color: #E9ECEF;
        }

        button {
            margin-top: 1rem;
            background-color: #FF4D4D;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #FF1A1A;
            }
    </style>
</head>
<body>
    <div class="admin-container">
        <h2>Users List</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Actions</th> <!-- New column for actions (delete) -->
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.EmployeeId</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.DateOfBirth.ToString("yyyy-MM-dd")</td>
                        <td>@user.Gender</td>
                        <td>@user.Address</td>
                        <td>@user.Pincode</td>
                        <td>
                            <!-- Delete button -->
                            @using (Html.BeginForm("Delete", "User", FormMethod.Post))
                            {
                                @Html.Hidden("employeeId", user.EmployeeId)
                                <button type="submit" class="btn btn-danger">Delete</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</body>
</html>
